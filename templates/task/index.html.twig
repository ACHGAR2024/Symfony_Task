{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Tâches</h1>
    <div class="text-right"><a href="{{ path('app_task_new') }}" class="btn btn-primary mb-3">Créer une nouvelle Tâche</a></div>
    <table class="table table-striped mb-5 bg-white rounded">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date d'échéance</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.description }}</td>
                    <td>{{ task.dueDate ? task.dueDate|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ task.status }}</td>
                    <td>
                        <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-info btn-sm m-2">Voir</a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm m-2">Modifier</a>
                        {{ include('task/_delete_form.html.twig', {'task': task}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune tâche trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
        
    </table>
{% endblock %}
