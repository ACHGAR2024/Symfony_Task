{% block title %}Task{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Fiche TÃ¢che</h1>

        <div class="card mt-3">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th class="text-right">Id</th>
                            <td>{{ task.id }}</td>
                        </tr>
                        <tr>
                            <th class="text-right">Title</th>
